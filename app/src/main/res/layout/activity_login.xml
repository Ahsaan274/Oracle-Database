<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">
    <ImageView
        android:id="@+id/companyLogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/fysl_login"
        android:layout_height="250dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        ></ImageView>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="20dp"
        android:id="@+id/userIdPanel"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@id/companyLogo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >
        <EditText
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/edit_text_border"
            android:singleLine="true"
            android:padding="15dp"
            android:drawablePadding="20dp"
            android:id="@+id/userId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/companyLogo"
            android:hint="User Name"
            ></EditText>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordPanel"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@id/userIdPanel"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >
        <EditText
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:background="@drawable/edit_text_border"
            android:singleLine="true"
            android:padding="15dp"
            android:drawablePadding="20dp"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/companyLogo"
            android:hint="Password"
            ></EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/forgetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordPanel"
        android:text="Forget Password?"
        android:layout_marginRight="50dp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold|italic"

        ></TextView>
    <Button
        android:background="@drawable/button"
        android:id="@+id/login"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/passwordPanel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="20dp"
        ></Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Stock trading App"
        android:textSize="30dp"
        android:textColor="#fff"
        android:layout_marginBottom="10dp"
        >
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>
